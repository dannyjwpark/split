<!DOCTYPE html>
<html>
  <head>
    <title>.split()</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    
    <%# boostrap_user %>
    <% if current_user %>
      <script type="text/javascript">
        window.currentUser = {
          "id": <%= current_user.id %>,
          "username": "<%= current_user.username %>",
          "email": "<%= current_user.email %>"
        };

        window.logo_primary = "<%= image_url('logo_primary.png') %>";
        window.logo_wide = "<%= image_url('logo_wide.png') %>";
        window.logo_with_text = "<%= image_url('logo_with_text.png') %>";
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
